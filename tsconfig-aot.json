{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "outDir": "./release/lib",
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs"
  },
  "files": [
    "src/declarations.d.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "demo"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit" : false,
    "skipTemplateCodegen": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  }
}
