{
  "name": "ngx-dnd",
  "version": "5.0.1",
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "build:prod": "ng build --prod",
    "serve": "ng serve",
    "start": "npm-run-all build:lib serve",
    "start:prod": "npm-run-all build:prod:lib serve",
    "test": "start-server-and-test serve http-get://localhost:4200 cy:open",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:single": "start-server-and-test serve http-get://localhost:4200 cy:run",
    "lint": "ng lint",
    "prettier": "prettier --write \"**/*.{js,ts}\"",
    "changelog": "chg release -y && git add -A CHANGELOG.md",
    "setMetadata": "ts-node ./tools/set-metadata.ts",
    "preversion": "npm-run-all build:prod:lib test:single",
    "version": "npm run changelog",
    "postversion": "cpx CHANGELOG.md ./projects/swimlane/ngx-dnd && npm run setMetadata",
    "scss-bundle": "scss-bundle -c ./projects/swimlane/ngx-dnd/scss-bundle.config.json",
    "scss-build": "node-sass ./projects/swimlane/ngx-dnd/src/lib/ngx-dnd.scss ./dist/swimlane/ngx-dnd/release/index.css",
    "prepublish:lib": "npm-run-all build:lib:prod test:single",
    "publish:lib": "cd dist/swimlane/ngx-dnd && npm publish",
    "build:lib": "ng build @swimlane/ngx-dnd",
    "postbuild:lib": "npm-run-all scss-bundle scss-build",
    "build:lib:prod": "ng build --prod @swimlane/ngx-dnd",
    "postbuild:lib:prod": "npm-run-all scss-bundle scss-build",
    "pack:lib": "cd dist/swimlane/ngx-dnd && npm pack",
    "deploy": "npm run build && angular-cli-ghpages --dir ./dist/ngx-dnd/",
    "publish": "npm-run-all publish:lib deploy",
    "prepublishOnly": "echo \"This is the workspace -- you probably meant run 'npm run lib:prepublish'.\" && exit 1"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.2",
    "@angular/cdk": "^6.1.0",
    "@angular/common": "^6.0.2",
    "@angular/compiler": "^6.0.2",
    "@angular/core": "^6.0.2",
    "@angular/flex-layout": "^6.0.0-beta.15",
    "@angular/forms": "^6.0.2",
    "@angular/http": "^6.0.2",
    "@angular/platform-browser": "^6.0.2",
    "@angular/platform-browser-dynamic": "^6.0.2",
    "@angular/router": "^6.0.2",
    "@swimlane/dragula": "^3.7.3",
    "@swimlane/ngx-ui": "^21.1.2",
    "@types/dragula": "^2.1.33",
    "core-js": "^2.5.4",
    "rxjs": "^6.0.0",
    "rxjs-compat": "^6.2.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.3",
    "@angular-devkit/build-ng-packagr": "~0.6.3",
    "@angular/cli": "~6.0.3",
    "@angular/compiler-cli": "^6.0.2",
    "@angular/language-service": "^6.0.2",
    "@swimlane/prettier-config-swimlane": "^0.1.1",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^8.9.5",
    "angular-cli-ghpages": "^0.5.2",
    "chg": "^0.3.3",
    "codelyzer": "~4.2.1",
    "cpx": "^1.5.0",
    "cypress": "^3.0.1",
    "ng-packagr": "^3.0.3",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.12.1",
    "scss-bundle": "^2.3.2",
    "start-server-and-test": "^1.4.1",
    "ts-node": "~5.0.1",
    "tsickle": ">=0.25.5",
    "tslib": "^1.7.1",
    "tslint": "~5.9.1",
    "tslint-config-prettier": "^1.13.0",
    "tslint-config-swimlane": "^3.0.4",
    "typescript": "~2.7.2"
  }
}
